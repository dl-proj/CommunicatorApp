<RoundedButton@Button>:
    background_color: 0, 0, 0, 0  # the last zero is the critical on, make invisible
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.border_radius
