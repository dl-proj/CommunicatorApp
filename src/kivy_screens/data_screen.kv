<DataScreen>:
    FloatLayout:
        FloatLayout:
            canvas.before:
                Color:
                    rgba: gray_header_label
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint: 1, 0.1
            padding: [20, 20, 20, 0]
            spacing: 10
        FloatLayout:
            canvas.before:
                Color:
                    rgba: body_screen
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint: 1, 0.9
            padding: [20, 0, 20, 20]
            spacing: 10
        RoundedButton:
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            spacing: 10
            text: "VDAI Daten"
            back_color: button_click
            on_press:
                root.manager.current = 'data'
        RoundedButton:
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.3, 'center_y': 0.9}
            spacing: 10
            text: "Analyse"
            back_color: top_button
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'analyze'
        RoundedButton:
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            spacing: 10
            text: "Optimierung"
            back_color: top_button
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'optimization'
        RoundedButton:
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.9, 'center_y': 0.9}
            spacing: 10
            text: "Datenbank Tools"
            back_color: top_button
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'data_tool'
        FloatLayout:
            canvas.before:
                Color:
                    rgba: block_line
                Line:
                    width: 5
                    rectangle: self.x, self.y, self.width, self.height
            orientation: 'vertical'
            size_hint: 0.2, 0.75
            pos_hint: {'center_x': 0.13, 'center_y': 0.43}
