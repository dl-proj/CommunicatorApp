<TimeStampDialog>
    title: ''
    size_hint: None, None
    width: 300
    auto_dismiss: False
    lb_error: er
    BoxLayout:
        orientation: "vertical"
        pos: self.pos
        size: root.size
        GridLayout:
            id: time_stamp
            orientation: "vertical"
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            Button:
                text: 'Enter'
                size_hint_y: None
                height: 40
                background_color: 255,0,0,0.9
                on_press: root._enter()
            Button:
                text: 'Cancel'
                size_hint_y: None
                height: 40
                background_color: 0,1,255,0.7
                on_press: root._cancel()
        Label:
            id: er
            foreground_color: 1, 250, 100, 1
            color: 1, 0.67, 0, 1
            size_hint_y: None
            height: 0
            text: root.error

<OpenDialog>:
    title: 'InputDateDialog'
    size_hint: None, None
    size: 400, 250
    auto_dismiss: False
    first_text: first_selected_date.text
    second_text: second_selected_date.text
    lb_error: er

    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Select date1 to analyze'
                on_press: root.show_calendar("1")

            Label:
                id: first_selected_date
                foreground_color: 1, 250, 100, 1
                color: 1, 0.67, 0, 1
                text: ""
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Select date2 to analyze'
                on_press: root.show_calendar("2")

            Label:
                id: second_selected_date
                foreground_color: 1, 250, 100, 1
                color: 1, 0.67, 0, 1
                text: ""
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Enter'
                background_color: 255,0,0,0.9
                on_press: root._enter()

            Button:
                text: 'Cancel'
                background_color: 0,1,255,0.7
                on_press: root._cancel()

        Label:
            id: er
            foreground_color: 1, 250, 100, 1
            color: 1, 0.67, 0, 1
            size_hint_y: None
            height: 0
            text: root.error

